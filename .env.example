# Application
APP_NAME=go-user-api
APP_VERSION=1.0.0
APP_ENV=development

# HTTP Server
HTTP_PORT=8080
HTTP_READ_TIMEOUT=10s
HTTP_WRITE_TIMEOUT=10s
HTTP_IDLE_TIMEOUT=120s
HTTP_ENABLE_PREFORK=false
HTTP_ENABLE_COMPRESSION=true

# gRPC Server
GRPC_PORT=50051
GRPC_MAX_RECV_MSG_SIZE=4194304  # 4MB
GRPC_MAX_SEND_MSG_SIZE=4194304  # 4MB
GRPC_ENABLE_REFLECTION=true
GRPC_USE_TLS=false
GRPC_CERT_FILE=
GRPC_KEY_FILE=

# Database
DB_TYPE=mongodb       # postgresql or mongodb
DB_HOST=localhost
DB_PORT=27017             # 5432 for PostgreSQL, 27017 for MongoDB
DB_USERNAME=mongo
DB_PASSWORD=mongo
DB_DATABASE=user_service
DB_SSLMODE=disable

# Cache
CACHE_TYPE=redis         # redis or memcached
CACHE_HOST=localhost
CACHE_PORT=6379          # 6379 for Redis, 11211 for Memcached
CACHE_PASSWORD=
CACHE_DB=0

# Jaeger
JAEGER_HOST=localhost
JAEGER_PORT=14268
JAEGER_SERVICE_NAME=go-user-api
JAEGER_ENABLED=true

# Security
JWT_SECRET=your-secret-key
JWT_EXPIRATION_HOURS=24
BCRYPT_COST=12

# Middlewares
MIDDLEWARE_TRACER=false
MIDDLEWARE_REQUEST_ID=false
MIDDLEWARE_RECOVER=false
MIDDLEWARE_CORS=false
MIDDLEWARE_HELMET=false
MIDDLEWARE_RATE_LIMIT=false
MIDDLEWARE_ETAG=false
MIDDLEWARE_COMPRESS=false
